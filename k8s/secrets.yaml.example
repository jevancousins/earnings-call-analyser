apiVersion: v1
kind: Secret
metadata:
  name: earnings-analyzer-secrets
  namespace: earnings-analyzer
type: Opaque
stringData:
  # Database password - CHANGE IN PRODUCTION
  POSTGRES_PASSWORD: "postgres"

  # Transcript API Keys (at least one recommended)
  # EarningsCall - Primary. Free tier: AAPL/MSFT only. https://earningscall.biz
  EARNINGSCALL_API_KEY: ""
  # Finnhub - Transcripts require paid subscription. https://finnhub.io
  FINNHUB_API_KEY: ""
  # Alpha Vantage - https://www.alphavantage.co
  ALPHAVANTAGE_API_KEY: ""
  # FMP - Legacy, deprecated for new users Aug 2025
  FMP_API_KEY: ""

  # Database URL (constructed from other values)
  DATABASE_URL: "postgresql://postgres:postgres@postgres-service:5432/earnings_analyzer"
